# Puerto del servidor
PORT=3000

# Configuración del tipo de repositorio a usar
# Opciones: 'postgres' (SQL directo) | 'prisma' (ORM)
DB_TYPE=postgres

# Configuración de la base de datos PostgreSQL
# Ambos repositorios usan la misma base de datos
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/fracttal_db

# Configuración de seguridad JWT
# JWT Secrets - ¡Usa valores largos y aleatorios generados por un gestor de contraseñas!
JWT_ACCESS_SECRET="tu_super_secreto_para_access_token_aqui"
JWT_REFRESH_SECRET="tu_otro_super_secreto_para_refresh_token_aqui"

# JWT Expiration Times
JWT_ACCESS_EXPIRATION="15m"  # 15 minutos
COOKIE_ACCESS_EXPIRATION=900  # 15 minutos
JWT_REFRESH_EXPIRATION="7d"   # 7 días
COOKIE_REFRESH_EXPIRATION=604800  # 7 días
